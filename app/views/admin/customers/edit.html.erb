<div class="container mt-5" style="max-width: 900px;">

  <h4 class="mb-4">
    <%= @customer.last_name %> <%= @customer.first_name %> さんの会員情報編集
  </h4>

  <%= form_with model: [:admin, @customer], local: true do |f| %>

    <div class="row mb-3">
      <div class="col-3">氏名</div>
      <div class="col-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">フリガナ</div>
      <div class="col-4">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-4">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">郵便番号</div>
      <div class="col-9">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">住所</div>
      <div class="col-9">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">電話番号</div>
      <div class="col-9">
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">メールアドレス</div>
      <div class="col-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-3">会員ステータス</div>
      <div class="col-9">
        <%= f.radio_button :is_active, true %> 有効
        <%= f.radio_button :is_active, false, class: "ms-3" %> 退会
      </div>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-9">
        <%= f.submit "変更を保存",
                     class: "btn btn-success px-4" %>
      </div>
    </div>

  <% end %>

</div>
