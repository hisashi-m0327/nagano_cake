<div class="container mt-5">

  <h4 class="mb-4">ジャンル編集</h4>

  <%= form_with model: [:admin, @genre], local: true do |f| %>

    <div class="d-flex align-items-center mb-4">
      <label class="me-3 mb-0">ジャンル名</label>

      <%= f.text_field :name, class: "form-control w-25 me-3" %>

      <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
    </div>

  <% end %>

</div>
