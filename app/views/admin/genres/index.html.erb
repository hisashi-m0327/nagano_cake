<div class="container mt-5">

  <h4 class="mb-4">ジャンル一覧・追加</h4>


    <%= form_with model: [:admin, @genre], local: true do |f| %>
    <div class="d-flex align-items-center mb-4">

      <label class="me-3 mb-0">ジャンル名</label>

      <%= f.text_field :name, class: "form-control w-25 me-3" %>

      <%= f.submit "新規登録", class: "btn btn-success px-4" %>

    </div>
  <% end %>


  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-end">
                <%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-success btn-sm px-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
