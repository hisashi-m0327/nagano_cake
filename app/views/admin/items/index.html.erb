<div class="container mt-5">

  <h4 class="mb-4">商品一覧</h4>

  <table class="table align-middle">
    <thead class="table-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>

          <td>
            <%= link_to item.name, admin_item_path(item) %>
          </td>

          <td>
            <%= number_with_delimiter(item.price) %> 円
          </td>

          <td>
            <%= item.genre.name %>
          </td>

          <td>
            <% if item.is_active %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-danger">販売停止中</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


