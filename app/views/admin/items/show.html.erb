<div class="container mt-5">


  <h4 class="mb-5">商品詳細</h4>

  <div class="row">


    <div class="col-md-4 text-center">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>

  
    <div class="col-md-8">

      <div class="form-row">
        <label class="form-label">商品名</label>
        <div class="form-input"><%= @item.name %></div>
      </div>

      <div class="form-row">
        <label class="form-label">商品説明</label>
        <div class="form-input"><%= @item.introduction %></div>
      </div>

      <div class="form-row">
        <label class="form-label">ジャンル</label>
        <div class="form-input"><%= @item.genre.name %></div>
      </div>

      <div class="form-row">
        <label class="form-label">
          税込価格<br>
          <span>(税抜価格)</span>
        </label>

        <div class="form-input d-flex align-items-center">
          <span>
            <%= number_with_delimiter(@item.price_with_tax) %> 円
          </span>

          <span class="ms-2">
            （<%= number_with_delimiter(@item.price) %> 円）
          </span>
        </div>
      </div>


      <div class="form-row">
        <label class="form-label">販売ステータス</label>
        <div class="form-input">
          <% if @item.is_active %>
            <span class="text-success">販売中</span>
          <% else %>
            <span class="text-danger">販売停止中</span>
          <% end %>
        </div>
      </div>


      <div class="mt-4">
        <%= link_to "編集する", edit_admin_item_path(@item),class: "btn btn-success px-4 " %>
      </div>

    </div>
  </div>
</div>


