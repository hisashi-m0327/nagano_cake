<div class="signup-container d-flex justify-content-center" style="padding-top: 50px;">
  <div class="signup-form">

    <h3 class="mb-4">新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field form-row">
        <%= f.label :name, "名前", class: "form-label" %>

        <div class="form-input d-flex align-items-center gap-3">
          <span>（姓）</span>
          <%= f.text_field :last_name, class: "form-control w-25" %>

          <span>（名）</span>
          <%= f.text_field :first_name, class: "form-control w-25" %>
        </div>
      </div>

      <div class="field form-row">
        <%= f.label :name_kana, "フリガナ", class: "form-label" %>

        <div class="form-input d-flex align-items-center gap-3">
          <span>（セイ）</span>
          <%= f.text_field :last_name_kana, class: "form-control w-25" %>

          <span>（メイ）</span>
          <%= f.text_field :first_name_kana, class: "form-control w-25" %>
        </div>
      </div>

      <div class="field form-row">
        <%= f.label :email, "メールアドレス", class: "form-label" %>

        <div class="form-input">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="field form-row">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label" %>
        <div class="form-input">
          <%= f.text_field :postal_code, maxlength: 7, autocomplete: "postal_code", class: "form-control" %>
        </div>
      </div>

      <div class="field form-row">
        <%= f.label :address, "住所", class: "form-label" %>
        <div class="form-input">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>


      <div class="field form-row">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "form-label" %>
        <div class="form-input">
          <%= f.telephone_field :telephone_number, maxlength: 11, class: "form-control" %>
        </div>
      </div>


      <div class="field form-row">
        <%= f.label :password, "パスワード(6文字以上)", class: "form-label" %>
        <div class="form-input">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>



      <div class="field form-row">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "form-label" %>
        <div class="form-input">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>


      <div>
        <%= f.submit "新規登録", class: "btn btn-success px-5" %>
      </div>

      <div class="signup-form">
        <h3 class="mb-4">既に登録済みの方</h3>
        <p>
          <%= link_to "こちら", new_session_path(resource_name) %>
          からログインしてください。
        </p>
      </div>

    <% end %>

  </div>
</div>
