<div class="signup-container d-flex justify-content-center align-items-center" style="padding-top: 50px;">

  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><br>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :name_kana, "フリガナ" %><br>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
      <%= f.text_field :postal_code, maxlength: 7, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所"%><br />
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
      <%= f.telephone_field :telephone_number, maxlength: 11%>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>
