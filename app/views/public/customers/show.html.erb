<div class="signup-container container" style="padding-top: 50px;">
  <div class="signup-form text-start">

    <h3 class="mb-4 text-center">マイページ</h3>

    <!-- 登録情報 -->
    <div class="row align-items-center mb-3">
      <div class="col-2">
        <h4 class="mb-0">登録情報</h4>
      </div>
      <div class="col-3">
        <%= link_to "編集する",
            edit_public_customers_path,
            class: "btn btn-success px-4" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-7">
        <table class="table">
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>


    <div class="row align-items-center mb-3">
      <div class="col-2">
        <h4 class="mb-0">配送先</h4>
      </div>
      <div class="col-3">
        <%= link_to "一覧を見る",public_addresses_path,class: "btn btn-primary px-4" %>
      </div>
    </div>

    <div class="row align-items-center mb-3">
      <div class="col-2">
        <h4 class="mb-0">注文履歴</h4>
      </div>
      <div class="col-3">
        <%= link_to "一覧を見る",public_orders_path,class: "btn btn-primary px-4" %>
      </div>
    </div>

  </div>
</div>


