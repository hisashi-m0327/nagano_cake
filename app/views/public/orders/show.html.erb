<div class="container mt-5">
  <h2>ご注文ありがとうございました</h2>

  <p>注文番号：<%= @order.id %></p>

  <h4>注文内容</h4>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= number_with_delimiter(detail.price) %> 円</td>
          <td><%= detail.amount %></td>
          <td><%= number_with_delimiter(detail.price * detail.amount) %> 円</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>送料：<%= @order.postage %> 円</p>
  <p><strong>請求金額：<%= @order.billing_amount %> 円</strong></p>
</div>
