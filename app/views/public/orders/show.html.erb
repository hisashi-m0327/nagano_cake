<div class="container mt-4">

  <h2 class="mb-4">注文履歴詳細</h2>

  <!-- 上段：注文情報 ＋ 請求情報 -->
  <div class="row">

    <!-- 左：注文情報 -->
    <div class="col-md-8">
      <h5 class="mb-3">注文情報</h5>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- 右：請求情報 -->
    <div class="col-md-4">
      <h5 class="mb-3">請求情報</h5>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>
              <%= number_with_delimiter(@order.billing_amount - @order.postage) %> 円
            </td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= number_with_delimiter(@order.postage) %> 円</td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td>
              <strong>
                <%= number_with_delimiter(@order.billing_amount) %> 円
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>

  <!-- 下段：注文内容 -->
  <div class="row mt-4">
    <div class="col-md-10">
      <h5 class="mb-3">注文内容</h5>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_details.each do |detail| %>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <% if detail.item.image.attached? %>
                    <%= image_tag detail.item.image,size: "60x60",class: "me-3 img-fluid" %>
                  <% end %>
                  <%= detail.item.name %>
                </div>
              </td>
              <td><%= number_with_delimiter(detail.price) %> 円</td>
              <td><%= detail.amount %></td>
              <td>
                <%= number_with_delimiter(detail.price * detail.amount) %> 円
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
