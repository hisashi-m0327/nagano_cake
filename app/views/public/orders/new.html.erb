<div class="container mt-5">

  <h3 class="mb-4">注文情報入力</h3>

  <%= form_with model: @order, url: public_orders_path, local: true do |f| %>

    <!-- 支払方法 -->
    <div class="mb-4">
      <h5>支払方法</h5>

      <div class="form-check">
        <%= f.radio_button :payment_method, "credit_card", checked: true,
              class: "form-check-input" %>
        <%= f.label :payment_method_credit_card,"クレジットカード",class: "form-check-label" %>
      </div>

      <div class="form-check">
        <%= f.radio_button :payment_method, "transfer",
              class: "form-check-input" %>
        <%= f.label :payment_method_transfer,"銀行振込",class: "form-check-label" %>
      </div>
    </div>


    <div class="mb-4">
      <h5>お届け先</h5>

      <div class="form-check mb-2">
        <%= f.radio_button :address_option, "own", checked: true,class: "form-check-input" %>
        <%= f.label :address_option_own,"ご自身の住所",class: "form-check-label" %>
        <div class="ms-4 small">
          〒<%= current_customer.postal_code %>
          <%= current_customer.address %><br>
          <%= current_customer.last_name %> <%= current_customer.first_name %>
        </div>
      </div>

      <div class="form-check mb-2">
        <%= f.radio_button :address_option, "registered",class: "form-check-input" %>
        <%= f.label :address_option_registered,"登録済住所から選択",class: "form-check-label" %>

        <div class="ms-4 mt-2">
          <%= f.select :address_id,@addresses.map { |a| ["〒#{a.postal_code} #{a.address} #{a.name}", a.id] },
              { include_blank: "選択してください" },class: "form-select" %>
        </div>
      </div>

      <div class="form-check">
        <%= f.radio_button :address_option, "new",class: "form-check-input" %>
        <%= f.label :address_option_new,"新しいお届け先",class: "form-check-label" %>


        <div class="container ms-4 mt-3">

          <div class="row align-items-center mb-3">
            <div class="col-3">
              <p>郵便番号(ハイフンなし)</p>
            </div>
            <div class="col-6">
              <%= f.text_field :postal_code,class: "form-control",placeholder: "0000000" %>
            </div>
          </div>

          <div class="row align-items-center mb-3">
            <div class="col-3">
              <p>住所</p>
            </div>
            <div class="col-9">
              <%= f.text_field :address,class: "form-control",placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>

          <div class="row align-items-center mb-3">
            <div class="col-3">
              <p>宛名</p>
            </div>
            <div class="col-6">
              <%= f.text_field :name,class: "form-control",placeholder: "令和 道子" %>
            </div>
          </div>

        </div>

      </div>
    </div>

    <div class="text-center">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg" %>
    </div>

  <% end %>

</div>
