<div class="container mt-5">
  <h4 class="mb-4">配送先編集</h4>

  <%= form_with model: @address, url: public_address_path(@address), local: true do |f| %>

    <div class="row mb-3">
      <div class="col-md-3"><strong>郵便番号(ハイフンなし)</strong></div>
      <div class="col-md-6">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"><strong>住所</strong></div>
      <div class="col-md-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-md-3"><strong>宛名</strong></div>
      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9 text-end">
        <%= f.submit "変更内容を保存", class: "btn btn-success me-2" %>
      </div>
    </div>

  <% end %>
</div>
