<div class="container mt-4">

  <h3 class="mb-4">
    商品一覧 (<%= @item_count %>件)
  </h3>

  <div class="row">
    <% @items.each_with_index do |item, index| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 text-center">
          <% if item.image.attached? %>
            <%= link_to public_item_path(item) do %>
              <%= image_tag item.image, class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to item.name, item_path(item), class: "text-dark text-decoration-none" %>
            </h5>
            <p class="card-text">
              <%= number_with_delimiter(item.price_with_tax) %> 円(税込)
            </p>
          </div>
        </div>
      </div>

    <% end %>
  </div>

</div>

