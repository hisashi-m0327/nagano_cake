<header class="site-header">
  <div class="header-inner">

    <div class="header-logo">
      <%= link_to root_path, class: "logo-link" do %>
        LOGO
      <% end %>
    </div>

    <nav class="header-nav">

      <% if admin_signed_in? %>
        <!-- 管理者ログイン時 -->

        <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
        <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
        <%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link" %>
        <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>

        <%= link_to "ログアウト",
                    destroy_admin_session_path,
                    method: :delete,
                    class: "nav-link btn btn-outline-danger" %>

      <% else %>
        <!-- 管理者以外 -->

        <%= link_to "About", about_path, class: "nav-link" %>
        <%= link_to "商品一覧", items_path, class: "nav-link" %>

        <% if customer_signed_in? %>
          <%= link_to "ログアウト",
                      destroy_customer_session_path,
                      method: :delete,
                      class: "nav-link btn btn-outline-danger" %>
        <% else %>
          <%= link_to "新規登録", new_customer_registration_path, class: "nav-link btn btn-outline-success" %>
          <%= link_to "ログイン", new_customer_session_path, class: "nav-link btn btn-outline-primary" %>
        <% end %>

      <% end %>

    </nav>

  </div>
</header>
